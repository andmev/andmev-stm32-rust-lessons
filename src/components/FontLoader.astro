---
// Font loading component with preconnect and preload for performance
---

<!-- Google Fonts - Preconnect for performance -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

<!-- Preload critical fonts -->
<link
  rel="preload"
  as="style"
  href="https://fonts.googleapis.com/css2?family=Instrument+Serif:wght@400&display=swap"
/>
<link
  rel="preload"
  as="style"
  href="https://fonts.googleapis.com/css2?family=PT+Sans:wght@400;700&display=swap"
/>

<!-- Load all fonts with async loading (CSP-compliant) -->
<link
  id="google-fonts"
  href="https://fonts.googleapis.com/css2?family=Instrument+Serif:wght@400&family=JetBrains+Mono:wght@400;700&family=PT+Sans+Narrow:wght@400;700&family=PT+Sans:wght@400;700&display=swap"
  rel="stylesheet"
  media="print"
/>
<script>
  // Load fonts asynchronously without inline event handlers (CSP-compliant)
  const fontLink = document.getElementById('google-fonts');
  if (fontLink) {
    fontLink.media = 'all';
  }
</script>
<noscript>
  <link
    href="https://fonts.googleapis.com/css2?family=Instrument+Serif:wght@400&family=JetBrains+Mono:wght@400;700&family=PT+Sans+Narrow:wght@400;700&family=PT+Sans:wght@400;700&display=swap"
    rel="stylesheet"
  />
</noscript>
