---
interface Props {
  type: 'website' | 'article';
  title: string;
  description?: string;
  url: string;
  image?: string;
  lang: string;
  datePublished?: string;
  dateModified?: string;
}

const { type, title, description, url, image, lang, datePublished, dateModified } = Astro.props;

const websiteSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'STM32 Rust Lessons',
  description: 'Learn STM32 microcontroller programming with Rust',
  url: url,
  inLanguage: lang,
};

const articleSchema = {
  '@context': 'https://schema.org',
  '@type': 'TechArticle',
  headline: title,
  description: description,
  url: url,
  inLanguage: lang,
  image: image,
  ...(datePublished && { datePublished }),
  ...(dateModified && { dateModified }),
  author: {
    '@type': 'Organization',
    name: 'STM32 Rust Lessons',
  },
  publisher: {
    '@type': 'Organization',
    name: 'STM32 Rust Lessons',
  },
};

const schema = type === 'article' ? articleSchema : websiteSchema;

// Sanitize JSON to prevent XSS by escaping < and > characters
const sanitizedSchema = JSON.stringify(schema).replace(/</g, '\\u003c').replace(/>/g, '\\u003e');
---

<script type="application/ld+json" set:html={sanitizedSchema} />
