---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { withBase } from '@/utils/url';

const lang = 'en'; // Default to English for 404 page
---

<BaseLayout
  lang={lang}
  title="404 - Page Not Found | STM32 Rust Lessons"
  description="The page you're looking for doesn't exist. Return to the home page to explore STM32 Rust tutorials."
>
  <div class="mx-auto flex min-h-[60vh] w-full max-w-[68rem] flex-col items-center justify-center px-4 py-16 text-center sm:px-6">
    <div class="mb-8">
      <h1 class="mb-4 font-serif text-6xl font-bold tracking-tight text-foreground sm:text-8xl">
        404
      </h1>
      <h2 class="mb-6 text-xl font-semibold text-foreground sm:text-2xl">
        Page Not Found
      </h2>
      <p class="mx-auto max-w-md text-base text-muted sm:text-lg">
        Oops! The page you're looking for doesn't exist. It might have been moved or deleted.
      </p>
    </div>

    <div class="flex flex-col gap-4 sm:flex-row">
      <a
        href={withBase('/en/')}
        class="inline-flex items-center justify-center rounded-full bg-foreground px-6 py-3 font-semibold text-background transition hover:opacity-90"
      >
        Go to Home Page
      </a>
      <a
        href={withBase('/en/getting-started/')}
        class="inline-flex items-center justify-center rounded-full border border-foreground/20 px-6 py-3 font-semibold text-foreground transition hover:border-foreground/40 hover:bg-foreground/5"
      >
        Browse Lessons
      </a>
    </div>
  </div>
</BaseLayout>
